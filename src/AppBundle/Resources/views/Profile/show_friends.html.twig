{% extends 'AppBundle:Profile:layout_connected.html.twig' %}

{% block content %}
    <h1>Mes amis : </h1>
    <table class="table table-bordered">
        <tr class="active">
            <td>Username</td>
            <td>Email</td>
            <td>Supprimer contact</td>
            <td>Detail</td>
        </tr>
        {% for u in userFriends %}
            <tr>
                <td>{{u.username}}</td>
                <td>{{u.email}}</td>
                                <td><a class="btn btn-danger" href="{{path('app_bundle_profile_delete',{"id" : u.id})}}">X</a></td>
                <td><a href="{{path('app_bundle_other_profile_show',{"id" : u.id})}}">Voir detail</a></td>
                
            </tr>
        {% endfor %}
    </table>
        
{% endblock %}{# empty Twig template #}
